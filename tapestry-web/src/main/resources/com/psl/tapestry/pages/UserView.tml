<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="layout" title="UserView tapestry-web"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">


	<t:if test="users">
		<div class="row">
			<div class="span12">

				<table t:id="myGrid" t:type="Grid" source="users" row="user"
					model="beanModel" pagerPosition="literal:both" rowsPerPage="${noOfRowsPerPage}"
					reorder="literal:rowNo,id,firstName,lastName,email,mobile">
					<p:actionsCell>
						<t:eventlink event="view" context="user.id">View</t:eventlink>&nbsp;&nbsp;
						<t:actionlink t:id="delete" context="user.id">Delete</t:actionlink>
						<t:zone t:id="paneZone" id="modalExamplePaneZone">
							<t:eventlink event="update" context="user.id" zone="^">Update</t:eventlink>&nbsp;&nbsp;
						</t:zone>
					</p:actionsCell>
					<p:rowNoCell>
						${rowNo}
					</p:rowNoCell>

				</table>
			</div>
		</div>
	</t:if>

	<t:zone t:id="modalZone" id="modalExampleModalZone">

		<t:if test="isFunction('update')">
			<t:SimpleModal t:id="personUpdateModal">
				<t:PersonUpdate t:id="personUpdate" userId="userId" />
			</t:SimpleModal>
		</t:if>

	</t:zone>


</html>