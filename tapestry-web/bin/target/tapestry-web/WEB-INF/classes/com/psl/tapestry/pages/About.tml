<html t:type="layout" title="About tapestry-web"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">

	<div class="row">
		<div class="span12">
			<p>About tapestry-web application ...</p>
		</div>
	</div>

	<t:if test="learn">
		<div class="row">
			<div class="span12">
				<p>
					To learn more go to
					<a href="http://tapestry.apache.org">Tapestry home</a>
					and start typing...
				</p>
			</div>
		</div>
	</t:if>

	<t:if test="users">
		<div class="row">
			<div class="span12">

				<table t:id="myGrid" t:type="Grid" source="users" row="user"
					model="beanModel" pagerPosition="literal:both" rowsPerPage="${noOfRowsPerPage}"
					reorder="literal:rowNo,firstName,lastName,username,password,email,mobile,enabled,locked">
					<p:rowNoCell>
						${rowNo}
					</p:rowNoCell>

				</table>
			</div>
		</div>
	</t:if>

</html>
